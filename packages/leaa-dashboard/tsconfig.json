{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "_dist",
    "allowJs": true,
    "jsx": "react",
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "lib": ["dom", "esnext"],
    "paths": {
      "@leaa/common/*": ["../_leaa-common/*"],
      "@leaa/dashboard/*": ["./*"]
    }
  },
  "include": ["src/**/*", "typings/*"],
  "exclude": ["node_modules", "dist", "_dist"]
}
